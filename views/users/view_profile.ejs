<!doctype html>
<html lang="en">
<%- include('../layouts/header_new'); -%>  
<body>
    
    <!-- Navigation-->
    <%- include('../layouts/navbar_new'); -%>    

    <div class="container my-5">
      <div class="row justify-content-center">
        <div class="col-6">
          <div class="row">
            <h1 class="fw-bolder text-center">Your profile details</h1>       
          </div>
          <div class="row my-2">
            <div class="col-lg-4">
              <div class="">Name</div>
            </div>
            <div class="col-lg-8">
              <div class="border"><%= user.name%></div>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-lg-4">
              <div class="">Email Address</div>
            </div>
            <div class="col-lg-8">
              <div class="border"><%= user.username%></div>
            </div>
          </div>
          <div class="row my-2">
            <div class="col-lg-4">
              <div class="mt-2">Date Registered</div>
            </div>
            <div class="col-lg-8">
              <div class="border"><%= user.date_account_created%></div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <h1 class="fw-bolder text-center">Your posts</h1>
      </div>
    </div>

    <% if (blogposts.length <= 0) { %>
      <div class="container">
        <div class="row">
          <p class="fw-bolder text-center">You don't have any posts</h1>
        </div>
      </div>
    <% } else { %>
      <div class="container">        
        <div class="row justify-content-center">
            <div class="col-10">
                <% for (var i = 0; i < blogposts.length; i++) { %>
  
                <div class="card my-3">
                    <div class="card-header">
                        <a class="text-decoration-none" href="/posts/view_one/<%= blogposts[i]._id %>">
                            <p class="display-6"><%= blogposts[i].title %></h5>
                        </a>
                    </div>
                    <div class="card-body">                          
                        <p class="card-text">
                            <%= blogposts[i].body.substring(0, 200) + "..." %> 
                            <a href="/posts/view_one/<%= blogposts[i]._id %>" class="">Read more</a> 
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="text-muted">First Posted on <%= blogposts[i].date_posted %></div>                    
                        <div class="text-muted">Post Updated on <%= blogposts[i].date_updated %></div>                        
                        <div class="text-muted">Posted by <%= blogposts[i].userId.name %></div>
                        <a href="/posts/edit/<%= blogposts[i]._id %>">
                          <button class="btn btn-primary" type="submit">Edit Post</button>
                        </a>
                    </div>
                </div>
                
                <% } %>
            </div>            
        </div>        
      </div>
    <% } %>

    
    <%- include('../layouts/footer_new'); -%>
    <%- include('../layouts/scripts_new'); -%>
</body>
</html>