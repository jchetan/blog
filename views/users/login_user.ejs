<!doctype html>
<html lang="en">
<%- include('../layouts/header_new'); -%>  
<body class="d-flex flex-column">

    
        <!-- Navigation-->
        <%- include('../layouts/navbar_new'); -%>
        <% if (locals.userMessage) { %>
            <div class="alert alert-success text-center" role="alert">
                <%= userMessage %>
            </div>
        <% } %>    
        <!-- Page content-->

        <div class="container my-5">
            <div class="row justify-content-center">
              <div class="col-5 bg-light">
                
                <div class="row">
                  <h1 class="fw-bolder text-center">Login</h1>       
                </div>
                <% if (locals.errorMessages) { %>
                    <% for (var i = 0; i < errorMessages.length; i++) { %>
                    <div class="alert p-0 alert-primary" role="alert">                                    
                        <%= errorMessages[i].msg %>
                    </div>
                    <% } %>
                <% } %> 
                <form id="contactForm" action="/users/validate_login_user" method="POST">
                    <!-- Username input-->
                    <div class="form-floating my-3">                                    
                        <input class="form-control" id="username" name="username" type="text" placeholder="Username"/>
                        <label for="username">Username</label>                                    
                    </div>
                    <!-- Password input-->
                    <div class="form-floating my-3">                                    
                        <input class="form-control" id="password" name="password" type="password" placeholder="Password"  />
                        <label for="password">Password</label>                                    
                    </div>                                
                    <!-- Submit Button-->
                    <div class="d-grid my-3">
                        <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Submit</button>
                    </div>
                </form>
              </div>
            </div>
        </div>
    
    <%- include('../layouts/footer_new'); -%>
    <%- include('../layouts/scripts_new'); -%>
</body>
</html>
