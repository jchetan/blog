<!doctype html>
<html lang="en">
<%- include('../layouts/header_new'); -%>  
<body>
    
    <!-- Navigation-->
    <%- include('../layouts/navbar_new'); -%>    

    <div class="container my-5">
      <div class="row justify-content-center">
        <div class="col-6 border">
          <div class="row">
            <h1 class="fw-bolder text-center">Your profile details</h1>       
          </div>
