<!doctype html>
<html lang="en">
<%- include('../layouts/header_new'); -%>  
<body>
    
    <!-- Navigation-->
    <%- include('../layouts/navbar_new'); -%>    
    
    <div class="container my-5 py-5">     
      <div class="row justify-content-center">
        <div class="col-8">              
          <form>
            <div class="form-group row text-center">                        
              <h1 class="fw-bolder">Your profile details</h1>                        
            </div>
            <div class="form-group row my-3">
              <label for="inputEmail3" class="col-lg-3 col-form-label">Name</label>
              <div class="col-lg-9">
                <input type="text" class="form-control" id="inputEmail3" value="<%= user.name%>" disabled>
              </div>
            </div>
            <div class="form-group row my-3">
              <label for="inputPassword3" class="col-lg-3 col-form-label">Email Address</label>
              <div class="col-lg-9">
                <input type="text" class="form-control" id="inputPassword3" value="<%= user.username%>" disabled>
              </div>
            </div>
            <div class="form-group row my-3">
              <label for="inputPassword3" class="col-lg-3 col-form-label">Date Registered</label>
              <div class="col-lg-9">
                <input type="text" class="form-control" id="inputPassword3" value="<%= user.date_account_created%>" disabled>
              </div>
            </div>
          </form>
        </div>
      </div>        
    </div> 
    
    
    <%- include('../layouts/footer_new'); -%>
    <%- include('../layouts/scripts_new'); -%>
</body>
</html>