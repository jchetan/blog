<!doctype html>
<html lang="en">
<%- include('../layouts/header_new'); -%>  
<body class="d-flex flex-column">
    <main class="flex-shrink-0">
    <!-- Navigation-->
    <%- include('../layouts/navbar_new'); -%>

    <section class="py-5">
        <div class="container px-5">            
            <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">                
                <div class="row gx-5 justify-content-center">
                    <div class="col-lg-16 col-xl-12">      
                        <div class="form-group row">
                            <div class="col-sm-2">
                                <label for="name" class="col-form-label">Name</label>
                            </div>
                            <div class="col-sm-10">
                                <input type="text" class="col-sm-8" id="name" value="<%= user.name%>" disabled>
                            </div>                                                        
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-2">
                                <label for="email" class="col-form-label">Email Address</label>
                            </div>
                            <div class="col-sm-10">
                                <input type="text" class="col-sm-8" id="email" value="<%= user.username%>" disabled>                            
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="date_registered" class="col-sm-2 col-form-label">Date Registered</label>
                            <div class="col-sm-10">
                                <input type="text" class="col-sm-8" id="date_registered" value="<%= user.date_account_created%>" disabled>                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>            
        </div>
    </section>
     
    </main>
    <%- include('../layouts/footer_new'); -%>
    <%- include('../layouts/scripts_new'); -%>
</body>
</html>