<!doctype html>
<html lang="en">
<%- include('../layouts/header_new'); -%>  
<body>
    <main class="flex-shrink-0">
        <!-- Navigation-->
        <%- include('../layouts/navbar_new'); -%>
        <!-- Page content-->
        <section class="py-5">
            <div class="container px-5">
                <!-- Contact form-->
                <div class="bg-light rounded-3 py-5 px-4 px-md-5 mb-5">
                    <div class="text-center mb-5">                        
                        <h1 class="fw-bolder">Edit Post</h1>                        
                    </div>
                    <div class="row gx-5 justify-content-center">
                        <div class="col-lg-16 col-xl-12 text-center">  
                            <% if (locals.errorMessages) { %>
                                <% for (var i = 0; i < errorMessages.length; i++) { %>
                                <div class="alert p-0 alert-primary" role="alert">
                                    <%= errorMessages[i].msg %>
                                </div>
                                <% } %>
                            <% } %>                         
                            <form method="post" action="/posts/save_existing_post">
                                <!-- Blog Title input-->
                                <div class="form-floating mb-3">                                         
                                    <input class="form-control" id="blog_title" name="blog_title" type="text" placeholder="Username" value="<%= blogpost.title%>"/>
                                    <label for="blog_title">Blog Title</label>           
                                </div>
                                <!-- Blog Content input-->
                                <div class="form-floating mb-3">   
                                    <div class="form-group">
                                        <textarea rows="6" placeholder="Blog Content" class="form-control" id="blog_content" name="blog_content"><%- blogpost.body%></textarea>	
                                    </div>
                                    <script>
                                        $('#blog_content').summernote({
                                        tabsize: 2,
                                        height: 200
                                        });
                                    </script>                                                                                                   
                                </div>                        
                                <input type="hidden" id="custId" name="blog_id" value="<%= blogpost._id %>">        
                                <!-- Submit Button-->
                                <button class="btn btn-primary btn-lg" id="submitButton" type="submit">Save Post</button>
                                <a class="btn btn-primary btn-lg" href="/posts/view_post/<%= blogpost._id %>">Cancel</a>
                            </form>
                        </div>
                    </div>
                </div>            
            </div>
        </section>
    </main>    

    <!-- Footer-->
    <%- include('../layouts/footer_new'); -%>
    <%- include('../layouts/scripts_new'); -%>
    </body>
</html>